{
  "name": "My Dev Container",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",
  "settings": {
    "python.defaultInterpreterPath": "/usr/local/bin/python",
    "terminal.integrated.shell.linux": "/bin/bash",
    "editor.formatOnSave": true,
    "python.analysis.typeCheckingMode": "basic",
    "ruff.enable": true,
    "ruff.importStrategy": "fromEnvironment",
    "json.format.enable": true,
    "files.associations": {
      "*.csv": "csv"
    }
  },
  "extensions": [
    "ms-python.python",
    "ms-toolsai.jupyter",
    "ms-azuretools.vscode-docker",
    "charliermarsh.ruff",
    "esbenp.prettier-vscode",
    "mechatroner.rainbow-csv"
  ],
  "mounts": [
    "source=${localWorkspaceFolder}/data,target=/workspace/data,type=bind",
    "source=${localWorkspaceFolder}/notebooks,target=/workspace/notebooks,type=bind",
    "source=${localWorkspaceFolder}/src,target=/workspace/src,type=bind",
    "source=${localWorkspaceFolder}/results,target=/workspace/results,type=bind"
  ],
  "remoteUser": "vscode"
}

